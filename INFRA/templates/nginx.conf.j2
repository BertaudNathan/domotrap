events {}
http {
  server {
    listen 80;
    server_name _;

    # Front statique
    root /usr/share/nginx/html;
    index index.html;

    # Reverse proxy → backend Node
    location /api/ {
      proxy_pass http://backend:8080/;   # service "backend" dans le réseau compose
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_http_version 1.1;
      proxy_set_header Connection "";
    }
  }
}
